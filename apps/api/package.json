{
  "name": "@project-x/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "profile:doctor": "pnpm build && clinic doctor -- node dist/server.js",
    "profile:flame": "pnpm build && clinic flame -- node dist/server.js"
  },
  "dependencies": {
    "@project-x/shared-types": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "2",
    "clinic": "^13.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
