{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/marketing/index.html",
        "http://localhost:3000/marketing/about.html",
        "http://localhost:3000/marketing/buy.html",
        "http://localhost:3000/marketing/sell.html"
      ],
      "startServerCommand": "pnpm --dir apps/web build && pnpm --dir apps/web start -- -p 3000",
      "startServerReadyPattern": "started server on",
      "startServerReadyTimeout": 120000,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.6
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "artifacts/lhci"
    }
  }
}
